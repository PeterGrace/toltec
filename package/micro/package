# SPDX-License-Identifier: MIT

pkgnames=(micro)
pkgdesc="a modern and intuitive terminal-based text editor"
url=https://micro-editor.github.io/
pkgver=2.0.8-1
timestamp=2020-10-06T22:44Z
section=utils
maintainer="Eeems <eeems@eeems.email>"
license=MIT

source=(https://github.com/zyedidia/micro/releases/download/v2.0.8/micro-2.0.8-linux-arm.tar.gz)
sha256sums=(91715dea6795bca7eb93624d20d60a07fdfa1e8880e456fdcd58d25b5eb2dc38)

package() {
    install -Dm644 "$srcdir"/LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -Dm644 "$srcdir"/LICENSE-THIRD-PARTY "$pkgdir/usr/share/licenses/$pkgname/LICENSE-THIRD-PARTY"
    install -Dm644 "$srcdir"/micro.1 "$pkgdir/home/root/.local/share/man/man1/micro.1"
    install -Dm744 "$srcdir"/micro "$pkgdir/opt/bin/micro"
}
